<Window x:Class="QLTVLite.WDTrangQuanLy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLTVLite"
        mc:Ignorable="d"
        Title="WDTrangQuanLy" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnQuanLySach"
                Content="Quản Lý Sách"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="60"
                Click="NavigateToUCQuanLySach"/>

        <Button x:Name="btnThongKe"
                Content="Thống Kê"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="60"
                Click="NavigateToUCThongKe"/>

        <ContentControl x:Name="MainContent"
                        Grid.RowSpan="2"/>
    </Grid>
</Window>
