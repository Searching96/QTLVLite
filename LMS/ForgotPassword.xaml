<Window x:Class="LoginApp.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="300" Width="350" 
        Background="#F0F0F0" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" Background="White" Margin="20">
            <TextBlock Text="Forgot Password" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333"/>
            <TextBlock Text="Email" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#555"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0,0,0,20" 
                     Background="#EEE" BorderThickness="1" BorderBrush="#CCC"/>
            <Button Content="Reset Password" Click="ResetPasswordButton_Click" Height="35" 
                    Background="#007ACC" Foreground="White" 
                    FontWeight="Bold" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>